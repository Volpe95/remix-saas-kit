{
  "name": "remix-saas",
  "description": "Remix SaaS kit with everything you need to start your SaaS applications.",
  "homepage": "https://saasfrontends.com",
  "repository": "https://github.com/AlexandroMtzG/remix-saas-kit",
  "bugs": "https://github.com/AlexandroMtzG/remix-saas-kit/issues",
  "author": "Alexandro Martinez",
  "private": true,
  "license": "",
  "sideEffects": false,
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"cross-env NODE_ENV=development remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@prisma/client": "^4.9.0",
    "@remix-run/react": "^1.10.1",
    "@remix-run/vercel": "^1.10.1",
    "@stripe/stripe-js": "^1.46.0",
    "@types/postmark": "^2.0.3",
    "@types/stripe": "^8.0.417",
    "axios": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "browser-image-compression": "^2.0.0",
    "clsx": "^1.2.1",
    "i18next": "^22.4.9",
    "moment": "^2.29.4",
    "numeral": "^2.0.6",
    "pdfjs-dist": "3.2.146",
    "postmark": "^3.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.4",
    "remix": "^1.10.1",
    "remix-i18next": "^5.0.0",
    "stripe": "^11.6.0",
    "tiny-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@remix-run/serve": "^1.10.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^18.0.26",
    "@types/react-datepicker": "^4.8.0",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.32.0",
    "postcss": "^8.4.21",
    "prisma": "4.9.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14"
  }
}
